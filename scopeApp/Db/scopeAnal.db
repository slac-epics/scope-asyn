#--- waveform analysis setup and results -------------------------
record( bo,"$(P):BO_CH$(N)_ANAL_PED"){
  field( DESC, "Get Pedestal for CH$(N)")
  field( DTYP, "asynInt32")
  field( OUT,  "@asyn($(PORT),$(N),1)BO_PED")
  field( ZNAM, "get")
  field( ONAM, "get")
}
record( ai, "$(P):AI_CH$(N)_AREA"){
  field( DESC, "Summed area:")
  field( DTYP, "asynFloat64")
  field( INP,  "@asyn($(PORT),$(N),1)AI_AREA")
  field( SCAN, "I/O Intr")
  field( PREC, "2")
  field( EGU,  "V*s")
}
record( ai, "$(P):AI_CH$(N)_PED"){
  field( DESC, "Summed ped:")
  field( DTYP, "asynFloat64")
  field( INP,  "@asyn($(PORT),$(N),1)AI_PED")
  field( SCAN, "I/O Intr")
  field( PREC, "2")
  field( EGU,  "V*s")
}

